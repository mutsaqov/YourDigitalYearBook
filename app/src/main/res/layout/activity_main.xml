<?xml version="1.0" encoding="utf-8"?>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">


            <RelativeLayout
                android:layout_width="@dimen/_500sdp"
                android:layout_height="@dimen/_180sdp"
                android:background="@drawable/ic_backatas_utama">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relativatas"
                android:layout_marginTop="@dimen/_15sdp"
                >

            <ImageView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:id="@+id/val"
                android:src="@drawable/valioso" />

            <TextView
                android:id="@+id/sma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/val"
                android:layout_marginBottom="@dimen/_30sdp"
                android:fontFamily="@font/mvboli"
                android:text="@string/namaSMA"
                android:layout_marginLeft="@dimen/_30sdp"
                android:textAlignment="textStart"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12ssp" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_centerVertical="true"
                app:cardCornerRadius="@dimen/_15sdp"
                android:id="@+id/crd"
                android:layout_below="@+id/relativatas"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rela"
                    >

                    <TextView
                    android:id="@+id/hi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mvboli"
                    android:text="@string/hi"
                    android:textAlignment="textStart"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_18ssp" />


                    <TextView
                        android:id="@+id/user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mvboli"
                        android:text="@string/username"
                        android:textAlignment="textStart"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_toRightOf="@+id/hi"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textSize="@dimen/_18ssp" />

                    <TextView
                        android:id="@+id/titik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mvboli"
                        android:text="..."
                        android:textAlignment="textStart"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_toRightOf="@+id/user"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_20ssp"
                        android:textSize="@dimen/_22ssp" />

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/ic_smile"
                        android:layout_toRightOf="@+id/titik"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_50sdp"
                        />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/crd"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_17sdp"
            >


            <RelativeLayout
                android:id="@+id/menuatas"
                android:layout_width="@dimen/_275sdp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="@dimen/_20sdp"
                    android:id="@+id/btsMenu"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:cardBackgroundColor="@color/colorAbu"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/menu1"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:src="@drawable/books" />

                        <TextView
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/menu1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:fontFamily="@font/mvboli"
                            android:lineSpacingMultiplier="0.8"
                            android:text="@string/menu1"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/_13ssp" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="@dimen/_20sdp"
                    android:id="@+id/profMenu"
                    android:layout_toRightOf="@+id/btsMenu"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:cardBackgroundColor="@color/colorAbu"
                    >

                    <RelativeLayout
                        android:layout_width="139dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/menu2"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:src="@drawable/profile" />

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/menu2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:lineSpacingMultiplier="0.8"
                            android:fontFamily="@font/mvboli"
                            android:text="@string/menu2"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menubawah"
            android:layout_width="@dimen/_275sdp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/menuatas"
            android:layout_marginTop="7dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_centerVertical="true"
                app:cardCornerRadius="@dimen/_20sdp"
                android:id="@+id/videoMenu"
                android:layout_marginTop="@dimen/_20sdp"
                app:cardBackgroundColor="@color/colorAbu"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/menu3"
                        android:layout_width="200dp"
                        android:layout_height="65dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/playbutton" />

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/menu3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:lineSpacingMultiplier="0.8"
                        android:fontFamily="@font/mvboli"
                        android:text="@string/menu3"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_centerVertical="true"
                app:cardCornerRadius="@dimen/_20sdp"
                android:id="@+id/teacherMenu"
                android:layout_toRightOf="@+id/videoMenu"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/colorAbu"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:id="@+id/menu4"
                        android:src="@drawable/ic_forum" />

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mvboli"
                        android:text="@string/menu4"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAlignment="center"
                        android:layout_below="@+id/menu4"
                        android:lineSpacingMultiplier="0.8"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </RelativeLayout>

</RelativeLayout>